{% extends 'base.html.twig' %}

{% block title %}ForumCommentaire index{% endblock %}

{% block body %}
    <h1>ForumCommentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Description</th>
                <th>Reaction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forum_commentaire in forum_commentaires %}
            <tr>
                <td>{{ forum_commentaire.id }}</td>
                <td>{{ forum_commentaire.date }}</td>
                <td>{{ forum_commentaire.description }}</td>
                <td>{{ forum_commentaire.reaction }}</td>
                <td>
                    <a href="{{ path('forum_commentaire_show', {'id': forum_commentaire.id}) }}">show</a>
                    <a href="{{ path('forum_commentaire_edit', {'id': forum_commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('forum_commentaire_new') }}">Create new</a>
{% endblock %}
